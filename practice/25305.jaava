import java.util.*;

public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int k = sc.nextInt();
        int[] arr = new int[N];
        for(int i=0; i<N; i++){
            int x = sc.nextInt();
            arr[i] = x;
        }
        Arrays.sort(arr);
        int cut = N-k;
        System.out.println(arr[cut]);
    }
}
